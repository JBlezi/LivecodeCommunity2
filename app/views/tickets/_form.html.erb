<%= simple_form_for(ticket) do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :language %>
  <%= f.association :tags,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
  <%= f.submit class:"btn btn-dark" %>
<% end %>
